@model ExamP1JG.ViewModel.viewModel

@{ ViewBag.Title = "QuizOlustur";
                Layout = "~/Views/Shared/_Layout.cshtml"; }


<div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto " id="soruHazirla">
        <div class="card card-signin my-5">
            <div class="card-body">
                <h5 class="text-center"><b>SORU HAZIRLA</b></h5>
                <br /><br />

                @using (Html.BeginForm("GuardarPregunta", "ExamenPreparar", FormMethod.Post, new { @id = "GuardarPregunta" }))

                {
    @Html.AntiForgeryToken()
                    <div class="form-label-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label><b>Cargar Pregunta</b></label>
                            </div>
                            <div class="col-md-6">
                                @Html.DropDownListFor(m => m.Soru.id_categoria, new SelectList(Model.Kategori, "id_categoria", "categoria"), "Categoria", new { @class = "form-control", required = "required" })

                            </div>
                        </div>
                    </div>

                                    <div class="form-label-group">
                                        <label><b>Escriba la pregunta:</b></label>
                                        @Html.TextAreaFor(m => m.Soru.pregunta, new { @class = "form-control soru", required = "required" })


                                    </div>
                                                    <br />

                                                                    <div id="secenek">
                                                                        <label><b>Escriba las respuestas y eliga la correcta</b></label>
                                                                        <div class="form-label-group">
                                                                            <div class="row ">
                                                                                @Html.RadioButtonFor(m => m.Secenek.correctaRsp, "respuesta1", new { @class = "form-control col-md-1", @checked = "checked" })
                                                                                @Html.TextBoxFor(m => m.Secenek.respuesta1, new { @class = "form-control col-md-11 btnCvp", required = "required" })
                                                                            </div>
                                                                        </div>

                                                                        <br />


                                                                        <div class="form-label-group">

                                                                            <div class="row">
                                                                                @Html.RadioButtonFor(m => m.Secenek.correctaRsp, "respuesta2", new { @class = "form-control col-md-1  " })
                                                                                @Html.TextBoxFor(m => m.Secenek.respuesta2, new { @class = "form-control col-md-11 btnCvp", required = "required" })
                                                                            </div>
                                                                        </div>

                                                                        <br />
                                                                        <div class="form-label-group">
                                                                            <div class="row">
                                                                                @Html.RadioButtonFor(m => m.Secenek.correctaRsp, "respuesta3", new { @class = "form-control col-md-1" })
                                                                                @Html.TextBoxFor(m => m.Secenek.respuesta3, new { @class = "form-control col-md-11 btnCvp", required = "required" })
                                                                            </div>
                                                                        </div>

                                                                        <br />

                                                                        <div class="form-label-group">
                                                                            <div class="row">
                                                                                @Html.RadioButtonFor(m => m.Secenek.correctaRsp, "respuesta4", new { @class = "form-control col-md-1 " })
                                                                                @Html.TextBoxFor(m => m.Secenek.respuesta4, new { @class = "form-control col-md-11 btnCvp", required = "required" })
                                                                            </div>
                                                                        </div>
                                                                        <br />

                                                                        <div class="form-label-group">
                                                                            <div class="row">
                                                                                <h4 id="correctaRsp"></h4>
                                                                            </div>
                                                                        </div>

                                                                    </div>


                                                                                    <br /><br />
                                                                                                    <button class="btn btn-lg btn-success btn-block text-uppercase" type="submit">Guardar</button>
                                                                                                                    <hr class="my-4">}

            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}






