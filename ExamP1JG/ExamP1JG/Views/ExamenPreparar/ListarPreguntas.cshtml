@model List<ExamP1JG.Models.EntityFramework.tbl_opcion>
@{ ViewBag.Title = "Listar Preguntas";
                Layout = "~/Views/Shared/_Layout.cshtml"; }



<div class="container" style="margin-top:70px;">

    <table class="table table-bordered table-hover">
        <tr style="background-color:lightgreen">
            <th>
                Categoria
            </th>
            <th>
               Pregunta
            </th>
            <th>
                Respuesta 1
            </th>
            <th>
                Respuesta 2
            </th>
            <th>
                Respuesta 3
            </th>
            <th>
                Respuesta 4
            </th>

            <th></th>
        </tr>

        @foreach (var quiz in Model)
        {
<tr>
    <td>
        @(quiz.tbl_pregunta.tbl_categoria.categoria)
    </td>
    <td>
        @(quiz.tbl_pregunta.pregunta)
    </td>
    <td>
        @(quiz.respuesta1)
    </td>
    <td>
        @(quiz.respuesta2)
    </td>
    <td>
        @(quiz.respuesta3)
    </td>
    <td>
        @(quiz.respuesta4)
    </td>

</tr>}

    </table>


</div>